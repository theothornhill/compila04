program plog
begin
  proc symbols(n : int, zz : string) 
  begin
      var i : int
      in
      i := 0;
      while( i < n)  
      do 
          printstr(zz);
          i:=i+1
      od
  end;
  
  proc skriv_plog() 
  begin
      var h : int ; 
      var j : int 
      in
      h := 5;
      j := 0;
      while(j < h) 
      do 
        symbols(j, " ");
        symbols(1, "X");
        symbols((h-j-1)*2, " ");
        symbols(1, "X");
        printline("");
        j:= j+1
      od
  end;
  
  proc Main() 
  begin
      skriv_plog()
  end
end
